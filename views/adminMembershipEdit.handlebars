<br>
<div class="container">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Update Promotion</h3>
        </div>
        <!-- penel-heading -->
        <div class="card-block">
            <form class="form-group" action="/admin/membership/{{editMembership.id}}?_method=PUT" method="POST">
                <div class="container">
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label for="">Title</label>
                                <input type="text" class="form-control" name="title" placeholder="title" value="{{editMembership.title}}">
                            </div>
                            <div class="form-group">
                                <label for="">Price</label>
                                <input type="text" class="form-control" name="price" placeholder="x.xx" value="{{editMembership.price}}">
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label for="">Description</label>
                                <pre><textarea class="form-control" name="description" placeholder="Description" row="50" style="height:20em">{{editMembership.description}}</textarea></pre>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Update Promotion</button>
                    <a href="/admin/membership">
                        <button type="button" class="btn btn-info">Cancel</button>
                    </a>
                </div>{{!-- container --}}
            </form>
        </div>
        <!-- card-block -->
    </div>
    <!-- second card -->
</div>{{!-- container --}}
<script type="text/javascript">
    $(document).ready(function () {
        $("#admin-ul").show();
        $("#public-ul").hide();
    });
</script>